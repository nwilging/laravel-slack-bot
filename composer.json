{
    "name": "nwilging/laravel-slack-bot",
    "description": "A robust Slack messaging integration for Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nwilging\\LaravelSlackBot\\": "src/",
            "Nwilging\\LaravelSlackBotTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Nick Wilging",
            "email": "nick@epautomotive.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "laravel/framework": ">=8",
        "guzzlehttp/guzzle": "^7.4"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nwilging\\LaravelSlackBot\\Providers\\SlackBotServiceProvider"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.6",
        "dealerinspire/laravel-coding-standard": "^2.0"
    }
}
